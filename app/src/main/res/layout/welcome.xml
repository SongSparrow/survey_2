<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:padding="0dp"
        android:text="@string/txt_welcome"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/txtAttend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtWelcome"
        android:layout_marginLeft="@dimen/margin_40dp"
        android:layout_marginTop="@dimen/margin_zero"
        android:layout_marginRight="@dimen/margin_40dp"
        android:layout_marginBottom="@dimen/margin_zero"
        android:text="@string/txt_attend"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/txtStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAttend"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_zero"
        android:text="@string/txt_statement"
        android:textSize="@dimen/font_size_middle" />

    <TextView
        android:id="@+id/txtRequest1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtStatement"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_zero"
        android:text="@string/txt_request1"
        android:textSize="@dimen/font_size_average" />


    <TextView
        android:id="@+id/txtRequest2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRequest1"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_zero"
        android:text="@string/txt_request2"
        android:textSize="@dimen/font_size_average" />

    <TextView
        android:id="@+id/txtRequest3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRequest2"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:text="@string/txt_request3"
        android:textSize="@dimen/font_size_average" />

    <CheckBox
        android:id="@+id/cbAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRequest3"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="@dimen/margin_40dp"
        android:text="@string/cb_accept"
        android:textSize="@dimen/font_size_average" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbAccept"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickNext"
        android:text="@string/btn_go"
        android:textSize="@dimen/font_size_middle" />


    <!-- END    : Your code should be within this block -->
</RelativeLayout>